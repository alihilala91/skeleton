<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-5.0.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">


    <!--    Create USer Sequence-->
    <changeSet id="1763884588832-1" author="Admin">
        <createSequence incrementBy="1" schemaName="skeleton" sequenceName="users_seq" startValue="1"/>
    </changeSet>

    <!--    Create User Table -->
    <changeSet id="1763884588832-2" author="Admin">
        <createTable schemaName="skeleton" tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="user_role_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!--    Add USer Table Relation with User Role Table -->
    <changeSet id="1763884588832-3" author="Admin">
        <addForeignKeyConstraint baseColumnNames="user_role_id" baseTableName="users" baseTableSchemaName="skeleton"
                                 constraintName="FK_USERS_ON_USER_ROLE" referencedColumnNames="id"
                                 referencedTableName="user_role" referencedTableSchemaName="skeleton"/>
    </changeSet>

</databaseChangeLog>